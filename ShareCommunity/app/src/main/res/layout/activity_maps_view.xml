<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivityView">

    <TextView
        android:id="@+id/tvLocationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/etSource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Source Location"
        android:layout_below="@+id/tvLocationLabel"
        android:padding="16dp"
        android:drawableRight="@drawable/ic_my_location" />



    <TextView
        android:id="@+id/tvDestinationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Where to go"
        android:layout_below="@+id/etSource"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/etDestination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Destination Location"
        android:layout_below="@+id/tvDestinationLabel"
        android:padding="16dp"/>

    <Button
        android:id="@+id/showdrivers_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact A Driver"
        android:layout_below="@+id/etDestination"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/showdrivers_btn"
        android:padding="16dp">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="367dp"
            android:layout_height="405dp"
            android:layout_weight="1"
            tools:context=".MapsActivityView" />

        <TextView
            android:id="@+id/tvDuration"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:textColor="#EF0B0B"
            android:textSize="18sp" />

    </LinearLayout>


</RelativeLayout>
